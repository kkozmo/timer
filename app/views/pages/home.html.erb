
<div id="bg"> 
<a><%= image_tag("hourglass.jpg", :alt => "Hourglass") %></a>
</div>

<% if user_signed_in? %> 
<%= render 'layouts/header' %>

<div class="jumbotron center"> 
<div class="col-md-6 herohome">
<h1> Start logging your time.</h1> 
<br>
<%= link_to "Go To Dashboard", clocks_path, class: "btn btn-primary btn-lg" %> 
</div>
</div>

<% else %> 
<div class="jumbotron center"> 
<div class="col-md-6 herohome">
<h1> Log Your Hours.</h1> 
<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %> 
<%= link_to "Log In", new_user_session_path, class: "btn btn-primary btn-lg" %> 
</div>
</div>
<% end %> 
